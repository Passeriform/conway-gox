{{ define "index" }}
<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <title>Conway's Game of Life - Go and Htmx</title>
        <link rel="icon" type="image/x-icon" href="/static/assets/favicon.ico">
        <link rel="stylesheet" href="/static/stylesheets/main.css">
        <script src="/static/js/main.js"></script>
        <script src="https://unpkg.com/htmx.org@1.9.10"></script>
        <script src="https://unpkg.com/htmx.org/dist/ext/ws.js"></script>
    </head>
    <body>
        <main hx-ext="ws" ws-connect="/connect/{{ .Id }}" hx-trigger="load">
            <div id="intro" class="row">
                <h1>Conway's Game of Life<small>Powered by tiny go server and htmx.</small></h1>
            </div>
            <canvas id="game-map"></canvas>
            <div id="controls" class="row">
                <button hx-swap="none" ws-send name="action" value="step">
                    Step Forward
                </button>
                <button hx-swap="none" ws-send name="action" value="togglePause">
                    {{ if .Game.Running }} Pause {{ else }} Play {{ end }}
                </button>
            </div>
        </main>
    </body>
</html>
{{ end }}
