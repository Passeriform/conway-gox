    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cli/cli.go",
            "env": {
                "GOPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Web Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/web/server.go",
            "env": {
                "GOPATH": "${workspaceFolder}"
            }
        }
    ]
}